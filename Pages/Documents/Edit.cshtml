@page "{id:int}"
@model CorpVault.Pages.Documents.EditModel

<h2>Edit Document</h2>

<form method="post">
    <input type="hidden" asp-for="Document.Id" />

    <div class="mb-3">
        <label>Title</label>
        <input asp-for="Document.Title" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
