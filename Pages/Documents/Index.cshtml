@page
@model CorpVault.Pages.Documents.IndexModel

<style>
    .docs-header {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: white;
        padding: 15px 25px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

    .company-name {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .logout-btn {
        border-color: white;
        color: white;
    }

        .logout-btn:hover {
            background-color: white;
            color: #0d6efd;
        }
</style>

<!-- 🔷 HEADER -->
<div class="docs-header d-flex justify-content-between align-items-center">
    <div>
        <div class="company-name">🏢 @Model.CompanyName</div>
        <small class="opacity-75">Document Management</small>
    </div>

    <form method="post" asp-page-handler="Logout">
        <button type="submit" class="btn btn-outline-light logout-btn">
            Logout
        </button>
    </form>
</div>

<!-- 🔷 CONTENT -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">My Documents</h4>

    <a asp-page="Create" class="btn btn-primary">
        + Upload Document
    </a>
</div>

@if (!Model.Documents.Any())
{
<div class="alert alert-info">
    No documents uploaded yet.
</div>
}
else
{
<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model.Documents)
        {
        <tr>
            <td>@doc.Title</td>
            <td>
                <a asp-page="Edit" asp-route-id="@doc.Id" class="btn btn-sm btn-outline-primary">
                    Edit
                </a>
                <a asp-page="Delete" asp-route-id="@doc.Id" class="btn btn-sm btn-outline-danger ms-1">
                    Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
}
